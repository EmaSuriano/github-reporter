{
  "name": "github-reporter",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@atlaskit/css-reset": "^3.0.2",
    "apollo-boost": "^0.1.16",
    "apollo-cache-inmemory": "^1.2.10",
    "apollo-client": "^2.4.2",
    "apollo-link-context": "^1.0.9",
    "apollo-link-http": "^1.5.5",
    "chart.js": "^2.7.2",
    "enzyme-adapter-react-16": "^1.6.0",
    "graphql": "^14.0.2",
    "grommet": "^2.2.1",
    "grommet-icons": "^4.1.0",
    "moment": "^2.22.2",
    "prop-types": "^15.6.2",
    "query-string": "^6.2.0",
    "ramda": "^0.25.0",
    "react": "^16.5.2",
    "react-apollo": "^2.1.11",
    "react-chartjs-2": "^2.7.4",
    "react-dom": "^16.5.2",
    "react-icons": "^3.2.1",
    "react-reveal": "^1.2.2",
    "react-scripts": "^2.1.3",
    "react-spinners": "^0.4.7",
    "react-test-renderer": "^16.6.0",
    "styled-components": "^4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "scripts": {
    "start": "cross-env NODE_PATH=./src react-scripts start",
    "build": "react-scripts build",
    "test": "cross-env NODE_PATH=./src react-scripts test --env=jsdom --colors",
    "test:ci": "cross-env CI=true NODE_PATH=./src react-scripts test --env=jsdom --colors",
    "test:coverage": "npm run test:ci -- --coverage",
    "eject": "react-scripts eject"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/index.js",
      "!src/screens/**/index.js",
      "!**/registerServiceWorker.js",
      "!**/setupTests.js",
      "!src/config/**/apolloConfig.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "coverageReporters": [
      "lcov"
    ]
  },
  "devDependencies": {
    "coveralls": "^3.0.2",
    "cross-env": "^5.2.0",
    "enzyme": "^3.7.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-prettier": "^2.6.2",
    "husky": "^1.0.0-rc.15",
    "jest-enzyme": "^7.0.0",
    "prettier": "^1.14.3",
    "pretty-quick": "^1.7.0",
    "waait": "^1.0.2"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
